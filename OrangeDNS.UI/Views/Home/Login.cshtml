@model OrangeDNS.UI.Model.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>OrangeDNS</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="loginColumns animated fadeInDown">
        <div class="row">

            <div class="col-md-6">
                <h2 class="font-bold">OrangeDNS'e Hoş Geldiniz</h2>

                <p>
                    OrangeDNS bir dns firewalldur.
                </p>

                <p>
                    OrangeDNS sayesinde kurumunuzda internet siteleri engelleyebilir yönlendirmeler yapabilirsiniz.
                </p>

                <p>
                    Bütün hakları saklıdır istesenizde bulamazsınız.
                </p>



            </div>
            <div class="col-md-6">
                <div class="ibox-content">
                    @using (Html.BeginForm("login", "home", FormMethod.Post, new { @class = "m-t" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(t => t.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(t => t.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                        </div>
                        if (ViewBag.ErrorMsg != null)
                        {
                            <div class="form-group alert alert-danger">
                                <strong>
                                    @ViewBag.ErrorMsg
                                </strong>
                            </div>
                        }

                        <button type="submit" class="btn btn-primary block full-width m-b">Giriş</button>
                    }
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                İsmail Kundakcı
            </div>
            <div class="col-md-6 text-right">
                <small>© 2016-2017</small>
            </div>
        </div>
    </div>

</body>

</html>
