@{
    ViewBag.Title = "Orange DNS";
}
<div class="ibox">

    <div class="ibox-content">
        <div class="row">
            <h2>@ViewData["ResultMsg"]</h2>
            <div class="col-lg-6">
                <form method="post" enctype="multipart/form-data" action="@Url.Action("BulkAdd","Domain")" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Dosya</label>
                        <div class="col-sm-10">
                            <input class="btn btn-primary" type="file" name="myFile" />
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tip</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="type">
                                @foreach (OrangeDNS.Data.DType item in Enum.GetValues(typeof(OrangeDNS.Data.DType)))
                                {
                                    <option value="@((int)item)">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Ip</label>
                        <div class="col-sm-10">
                            <input type="text" name="forwardip" class="form-control" />
                        </div>
                    </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Kategori</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="category">
                                        @foreach (var item in (List<OrangeDNS.Data.Category>)ViewData["Categories"])
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <input class="btn btn-primary pull-right" type="submit" value="Yükle" />
                </form>
            </div>
            </div>
</div>
</div>